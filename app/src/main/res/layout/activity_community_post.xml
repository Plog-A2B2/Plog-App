<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityPostActivity"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시글 작성"
            android:fontFamily="@font/nanumbarungothicbold"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backBtn"
            android:textSize="30sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="@drawable/rounded_stroke_square">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="제목 : "
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/semiround_rectangle_white"
                android:gravity="center"
                android:fontFamily="@font/nanumbarungothiclight"

                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="플로깅 장소 : "
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/ploggingPlace"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/semiround_rectangle_white"
                android:gravity="center"
                android:hint="플로깅 할 장소를 적어주세요!"
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="모임일시 : "
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/meetingDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/semiround_rectangle_white"
                android:gravity="center"
                android:hint="날짜와 정확한 시간을 정해주세요!"
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="모임장소 : "
                android:layout_gravity="center"
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/meetingPlace"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/semiround_rectangle_white"
                android:gravity="center"
                android:hint="모임 장소를 적어주세요!"

                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="내용"
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/semiround_rectangle_white"
                android:fontFamily="@font/nanumbarungothiclight"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/enterBtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="등록"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp"
        android:background="#9A8DBD"
        android:fontFamily="@font/nanumbarungothiclight"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

</LinearLayout>