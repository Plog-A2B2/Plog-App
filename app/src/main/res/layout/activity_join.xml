<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:background="#DAE6EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="닉네임"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/joinNick"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_stroke_square"
                android:fontFamily="@font/nanumbarungothiclight"
                android:hint=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nickDu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_full_square"
                android:fontFamily="@font/nanumbarungothiclight"
                android:text="중복확인" />
        </LinearLayout>

        <TextView
            android:id="@+id/nickDuCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="사용 가능한 닉네임 입니다"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="아이디"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/joinId"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_stroke_square"
                android:fontFamily="@font/nanumbarungothiclight"
                android:hint=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idDuCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_full_square"
                android:fontFamily="@font/nanumbarungothiclight"
                android:text="중복확인" />
        </LinearLayout>

        <TextView
            android:id="@+id/idDuCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="사용 가능한 ID 입니다"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="비밀번호"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/joinPw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_stroke_square"
            android:fontFamily="@font/nanumbarungothiclight"
            android:hint="영어+숫자 8자 이상"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/joinPwCheck"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_stroke_square"
            android:fontFamily="@font/nanumbarungothiclight"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwDuCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="사용 가능한 PW 입니다"
            android:textSize="10sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumbarungothiclight"
                android:text="이메일"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/joinEmail"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="6"
                    android:background="@drawable/rounded_stroke_square"
                    android:fontFamily="@font/nanumbarungothiclight"
                    android:hint="이메일"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarungothiclight"
                    android:gravity="center"
                    android:text="@"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="4"
                    android:background="@drawable/rounded_stroke_square"
                    android:entries="@array/emailArray"
                    android:fontFamily="@font/nanumbarungothiclight"></Spinner>
            </LinearLayout>

            <TextView
                android:id="@+id/emailAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="이메일 인증을 진행해주세요."
                android:textColor="#9B111E"
                android:textSize="10sp" />

            <Button
                android:id="@+id/emailAuthBtn"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_full_square"
                android:fontFamily="@font/nanumbarungothiclight"
                android:text="인 증 하 기" />


        </LinearLayout>

        <TextView
            android:id="@+id/emailCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothiclight"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothiclight"
            android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_color_square"
        android:textColor="#ffffff"
        android:fontFamily="@font/nanumbarungothic"
        android:text="JOIN"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>