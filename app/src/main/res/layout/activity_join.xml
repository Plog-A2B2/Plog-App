<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:background="#DAE6EE">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/back" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/nanumbarungothicbold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:padding="10dp"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="닉네임"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/joinNick"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_stroke_square"
                android:fontFamily="@font/nanumbarungothic"
                android:hint=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nickDu"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/round_rectangle_small_purple"
                android:fontFamily="@font/nanumbarungothic"
                android:text="중복확인" />
        </LinearLayout>

        <TextView
            android:id="@+id/nickDuCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="사용 가능한 닉네임 입니다"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="아이디"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/joinId"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_stroke_square"
                android:fontFamily="@font/nanumbarungothic"
                android:hint=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idDuCheckBtn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/round_rectangle_small_purple"
                android:fontFamily="@font/nanumbarungothic"
                android:text="중복확인" />
        </LinearLayout>

        <TextView
            android:id="@+id/idDuCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="사용 가능한 ID 입니다"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="비밀번호"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/joinPw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_stroke_square"
            android:fontFamily="@font/nanumbarungothic"
            android:hint="영어+숫자 8자 이상"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/joinPwCheck"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_stroke_square"
            android:fontFamily="@font/nanumbarungothic"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pwDuCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="사용 가능한 PW 입니다"
            android:textSize="16sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="이메일"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/joinEmail"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="6"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_stroke_square"
                    android:fontFamily="@font/nanumbarungothic"
                    android:hint="이메일"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarungothic"
                    android:gravity="center"
                    android:text="@"
                    android:layout_gravity="center"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_stroke_square"
                    android:entries="@array/emailArray"
                    android:fontFamily="@font/nanumbarungothic"></Spinner>
            </LinearLayout>

            <TextView
                android:id="@+id/emailAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="이메일 인증을 진행해주세요."
                android:textColor="#9B111E"
                android:textSize="16sp" />

            <Button
                android:id="@+id/emailAuthBtn"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_rectangle_long_purple"
                android:fontFamily="@font/nanumbarungothic"
                android:textSize="17sp"
                android:text="인 증 하 기" />


        </LinearLayout>

        <TextView
            android:id="@+id/emailCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/join"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/round_rectangle_small_deeppurple"
        android:textColor="#ffffff"
        android:fontFamily="@font/nanumbarungothic"
        android:text="JOIN"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>