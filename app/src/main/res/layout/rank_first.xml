<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/rank_first_frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rank_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/rank_first_userimg"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/badgetest"
        app:layout_constraintBottom_toBottomOf="@+id/rank_first_frame"
        app:layout_constraintEnd_toEndOf="@+id/rank_first_frame"
        app:layout_constraintStart_toStartOf="@+id/rank_first_frame"
        app:layout_constraintTop_toTopOf="@+id/rank_first_frame" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/rank_first_frame">

        <TextView
            android:id="@+id/rank_first_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumbarungothiclight"
            android:text="장징징"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rank_first_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rank_first_name"
            android:fontFamily="@font/nanumbarungothiclight"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="7120점"
            android:textSize="18sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>