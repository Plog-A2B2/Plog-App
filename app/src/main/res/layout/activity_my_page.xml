<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity"
    android:background="#EAEAEB">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/logotest"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/setting"
        android:layout_marginTop="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/firstLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logoImg">
        
        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/badgetest"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="username 님"
                android:textSize="28sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nanumbarungothicbold"/>

            <TextView
                android:id="@+id/coinNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="0코인"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nanumbarungothic"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondLinear"
        android:layout_width="360dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstLinear"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/semiround_rectangle_white">

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="0 KM"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/nanumbarungothicbold"/>
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="0 H"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/nanumbarungothicbold"/>
        <TextView
            android:id="@+id/trashNumTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="0 개"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/nanumbarungothicbold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/secondLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/more"/>

    <android.widget.Button
        android:id="@+id/myCommunityTaskBtn"
        android:layout_width="360dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/more"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/semiround_rectangle_white"
        android:text="내 커뮤니티"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/nanumbarungothic"/>

    <android.widget.Button
        android:id="@+id/recycleInfoLinkBtn"
        android:layout_width="360dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/myCommunityTaskBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/semiround_rectangle_white"
        android:text="분리수거 도우미"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/nanumbarungothic"/>

    <TextView
        android:id="@+id/badgebackTitle"
        android:layout_width="190dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/recycleInfoLinkBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:text="배지 목록"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/nanumbarungothiclight"/>

    <ImageView
        android:id="@+id/badgeback"
        android:layout_width="330dp"
        android:layout_height="310dp"
        app:layout_constraintTop_toBottomOf="@+id/badgebackTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/round_rectangle_blue"/>

    <!-- 배지 리스트를 위한 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/badgeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="225dp"
        app:layout_constraintTop_toTopOf="@id/badgeback"
        app:layout_constraintLeft_toLeftOf="@id/badgeback"
        app:layout_constraintRight_toRightOf="@id/badgeback"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:scrollbars="horizontal"
        android:fontFamily="@font/nanumbarungothiclight"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <include layout="@layout/bottom"></include>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>